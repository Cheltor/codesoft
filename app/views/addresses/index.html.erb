<br>
<br><div class="container">
  <div class="row">

    <div class="col-lg-6">
      <div class="card" style="background-color: #e3f2fd;">
        <div class="card-body">
          <%= search_form_for @q, url: root_path, method: :get do |f| %>
          <%= f.search_field :combadd_cont, class:"form-control form-control-lg", placeholder: "Type in the address here" %>
          <br><div style="text-align:center"><%= f.submit "Search", class:"btn btn-primary" %></div>
          <% end %>
        </div>
      </div>
      <br>
      <table class="table table-striped">
        <thead class="thead-light">
          <tr>
            <th scope="col">Address</th>
            <th scope="col">Comments</th>
            <th scope="col">All Violations</th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.order("updated_at DESC").first(50).each do |address| %>
          <tr>
          <% if address.violations.current.exists? == true %>
            <td><%= link_to address.combadd, address_path(address), class:"btn btn-warning" %></td>
          <% else %>
            <td><%= link_to address.combadd, address_path(address), class:"btn btn-primary" %></td>
          <% end %>
            <td><%= address.comments.all.count %></td>
            <td><%= address.violations.all.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
    <div class="col-lg-3">
    <h1 style="text-align:center">Recent Violations</h1>
      <% @violations.first(50).each do |violation| %>
      <% if violation.status == "current" %>
        <% if violation.deadline_passed? %>
        <div class="card border-danger mb-3">
        <div class="card-header bg-danger"><%= link_to violation.address.combadd, address_path(violation.address), class: "btn btn-danger" %> by <%= violation.user.email.split("@").first %></div>
        <% else %>
        <div class="card border-warning mb-3">
        <div class="card-header bg-warning"><%= link_to violation.address.combadd, address_path(violation.address), class: "btn btn-warning" %> by <%= violation.user.email.split("@").first %></div>
        <% end %>
        <div class="card-body">
        <strong><%= violation.violation_type %></strong>
        <p>Codes referenced:</p>
        <strong>
          <% violation.codes.each do |code| %>
            <%= code.name %>;
          <% end %>
        </strong>
        <br>
        <br>
        <p>Deadline: <strong><%= violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></strong></p>
        </div>
        <div class="card-footer">
        <%= violation.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y at %I:%M%p") %>
        </div>
        </div><br>
      <% else %>
        <div class="card border-success mb-3">
        <div class="card-header bg-success"><%= link_to violation.address.combadd, address_path(violation.address), class: "btn btn-success" %> by <%= violation.user.email.split("@").first %></div>
        <div class="card-body">
        <strong><%= violation.violation_type %></strong>
        <p>Codes referenced:</p>
        <strong>
          <% violation.codes.each do |code| %>
            <%= code.name %>;
          <% end %>
        </strong>
        <br>
        <br>
        <p>Deadline: <strong><%= violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></strong></p>
        <br>
        <p>Resolved: <%= violation.updated_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y at %I:%M%p") %></p>
        </div>
        <div class="card-footer">
        <%= violation.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y at %I:%M%p") %>
        </div>
        </div><br>
      <% end %>

      <% end %>
    </div>
    <div class="col-lg-3">
      <h1 style="text-align:center">Recent Comments</h1>
        <ul>
          <% @comments.each do |comment| %>
          <div class="card mb-3">
            <div class="card-header"><%= link_to comment.address.combadd, address_path(comment.address), class: "btn btn-secondary" %> by <%= comment.user.email.split("@").first %></div>
            <div class="card-body">
              <%= comment.content %>
              <br>
              <br>
              <% if comment.photos.attached? %>
              <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#comment-<%= comment.id %>">
                Photos
              </button>
              <% end %>
            <br>
            <br>
            </div>
            <div class="card-footer">
            <%= comment.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y at %I:%M%p") %>
            </div>
          </div>

            <!-- Comment Modal -->
            <div class="modal fade custom-modal-lg" role="dialog" id="comment-<%= comment.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                      <%= comment.content %>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <% comment.photos.each do |photo| %>
                      <%= image_tag photo, class: "img-fluid" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

          <% end %>
        </ul>

    </div>
  </div>
<br>
</div>
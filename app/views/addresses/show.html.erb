<% content_for :title, @address.combadd %>

<br>
<div class="container mb-5">
  <div class="row">
    <div class="col-xl-6">  
      <div class="card">
        <div class="card-body">
          <h2><%= @address.combadd %> <a href="https://www.google.com/maps/search/?api=1&query=<%= @address.combadd %>+MD+<%= @address.premisezip %>" target="_blank" class="btn btn-secondary">Search on Google Maps</a>
          </h2>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Update Owner/Address
          </button>

          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  Be careful when updating the address information.
                  
                </div>
                <div class="modal-footer">
                  <%= link_to "Update", edit_address_path(@address), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
      
          <h4>Owner:</h4>
          <p><%= @address.ownername %></p>
          <h4>Owner Address:</h4>
          <p><%= @address.owneraddress %> <%= @address.ownercity %>, <%= @address.ownerstate %> <%= @address.ownerzip %></p>
                <button type="button" class="btn btn-outline-primary btn-lg" data-bs-toggle="modal" data-bs-target="#allphotoModal">
          All Attachments
        </button>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade custom-modal-lg" id="allphotoModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
               All Attachments
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
              <% @address_photos.each do |photo| %>

            <div class="modal-header" style="text-align:center">
                <% if photo.content_type == 'application/pdf' %>
                  <iframe src="<%= rails_blob_url(photo) %>" width="100%" height="800px"></iframe>
                <% elsif photo.filename.to_s.ends_with?('.doc', '.docx') %>
                  <%= link_to photo.filename, rails_blob_url(photo, disposition: 'photo') %>
                <% else %>
                  <%= image_tag photo, class: "img-fluid" %>
                <% end %>
                <br>
            </div>
              <% end %>
          </div>
        </div>
      </div>

      <br>
      <h2 style="text-align: center">Violations</h2>
      <div style="text-align: center">
        <%= link_to "Create a Violation", new_address_violation_path(@address), class: "btn btn-outline-danger btn-lg" %>
      </div>
      <br>
      <br>
      <% @address.violations.order("created_at DESC").each do |violation| %>
      <div class="d-grid gap-2">
        <% if violation.deadline_passed? and violation.current? %>
          <%= link_to "#{violation.violation_type} - #{violation.user.name} - #{violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y")}", address_violation_path(@address, violation), class: "btn btn-danger btn-lg" %>
        <% elsif violation.current? %>
          <%= link_to "#{violation.violation_type} - #{violation.user.name} - #{violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y")}", address_violation_path(@address, violation), class: "btn btn-warning btn-lg" %>
        <% else %>
          <%= link_to "#{violation.violation_type} - #{violation.user.name} - #{violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y")}", address_violation_path(@address, violation), class: "btn btn-secondary btn-lg" %>
        <% end %>
      </div>
      <br>
      <% end %>
    </div>
    <br>  
    <div class="col-xl-6">
      <div class="card" style="background-color: #e3f2fd;">
        <div class="card-body">
          <%= render 'comments/form' %>
        </div>
      </div>
      <br>
      <div class="card" style="background-color: #e3f2fd;">
        <div class="card-body">
          <%= render 'comments/comments' %>
        </div>
      </div>
    </div>
  </div>
</div>
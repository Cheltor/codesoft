<% content_for :title, @address.combadd %>

<br>
<div class="container mb-5">
  <div class="row">
    <div class="col mt-5">
      <div class="card">
        <div class="card-body">
          <h2><%= @address.combadd %> <a href="https://www.google.com/maps/search/?api=1&query=<%= @address.combadd %>+MD+<%= @address.premisezip %>" target="_blank" class="btn btn-secondary">Search on Google Maps</a>
          </h2>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Update Owner/Address
          </button>

          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  Be careful when updating the address information.
                  
                </div>
                <div class="modal-footer">
                  <%= link_to "Update", edit_address_path(@address), class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
      
          <h4>Owner:</h4>
          <p><%= @address.ownername %></p>
          <h4>Owner Address:</h4>
          <p><%= @address.owneraddress %> <%= @address.ownercity %>, <%= @address.ownerstate %> <%= @address.ownerzip %></p>
          <% if @address_photos.any? %>
          <button type="button" class="btn btn-outline-primary btn-lg" data-bs-toggle="modal" data-bs-target="#allphotoModal">
            All Attachments
          </button>
          <% end %>
        </div>
      </div>
      <div class="card mt-5" style="background-color: #e3f2fd;">
        <div class="card-body">
          <%= render 'comments/form' %>
        </div>
      </div>
      <br>
      <div class="card" style="background-color: #e3f2fd;">
        <div class="card-body">
          <div class="accordion" id="accordionExample">
            <div class="accordion-item">
              <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                  <strong>Show Comments (<%= @address.comments.count %>)
                  </strong>
                </button>
              </h2>
              <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                  <%= render 'comments/comments' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      <!-- Modal -->
      <div class="modal fade custom-modal-lg" id="allphotoModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
               All Attachments
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
              <% @address_photos.each do |photo| %>

            <div class="modal-header" style="text-align:center">
                <% if photo.content_type == 'application/pdf' %>
                  <iframe src="<%= rails_blob_url(photo) %>" width="100%" height="800px"></iframe>
                <% elsif photo.filename.to_s.ends_with?('.doc', '.docx') %>
                  <%= link_to photo.filename, rails_blob_url(photo, disposition: 'photo') %>
                <% else %>
                  <%= image_tag photo, class: "img-fluid" %>
                <% end %>
                <br>
            </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col mt-5">
      <h2 style="text-align: center">Violations</h2>
      <div style="text-align: center">
        <%= link_to "Create a Violation", new_address_violation_path(@address), class: "btn btn-outline-danger btn-lg" %>
      </div>
      <br>
      <% if @address.violations.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">Violation Type</th>
              <th scope="col">Deadline Date</th>
              <th scope="col">Status</th>
              <th scope="col">Created By</th>
            </tr>
          </thead>
          <tbody>
          <% @address.violations.order("created_at DESC").each do |violation| %>
            <tr>
            <% if violation.status == "current" && violation.deadline_date < Date.today %>
              <td><%= link_to violation.violation_type, violation_path(violation), class:"btn btn-danger" %></td>
              <% elsif violation.status == "current" && violation.deadline_date > Date.today %>
              <td><%= link_to violation.violation_type, violation_path(violation), class:"btn btn-warning" %></td>
              <% else %>
              <td><%= link_to violation.violation_type, violation_path(violation), class:"btn btn-secondary" %></td>
              <% end %>
              <td><%= violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></td>
              <td><%= violation.status.capitalize %></td>
              <td><%= violation.user.name %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% else %>
      <p style="text-align: center">No violations have been created for this address.</p>
      <% end %>
      <% if @address_citations.any? %>
      <h2 style="text-align:center">Citations</h2>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">Created By</th>
              <th scope="col">Amount</th>
              <th scope="col">Status</th>
              <th scope="col">Deadline</th>
              <th scope="col">Code</th>
            </tr>
          </thead>
          <tbody>
            <% @address_citations.each do |citation| %>
            <tr>
              <td><%= citation.user.name %></td>
              <td><%= number_to_currency(citation.fine) %></td>
              <td>
              <% if citation.status == "unpaid" && citation.deadline <= Date.today %>
                <%= link_to citation.status.capitalize, citation_path(citation), class:"btn btn-danger" %>
              <% elsif citation.status == "unpaid" && citation.deadline > Date.today %>
                <%= link_to citation.status.capitalize, citation_path(citation), class:"btn btn-warning" %>
              <% elsif citation.status == "paid" %>
                <%= link_to citation.status.capitalize, citation_path(citation), class:"btn btn-success" %>
              <% elsif citation.status == "dismissed" %>
                <%= link_to citation.status.capitalize, citation_path(citation), class:"btn btn-secondary" %>
              <% elsif citation.status == "pending trial" %>
                <%= link_to citation.status.capitalize, citation_path(citation), class:"btn btn-info" %>
              <% end %>
              </td>
              <td><%= citation.deadline.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></td>
              <td>
                <button class="btn btn-outline-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasTop<%= citation.code.id %>" aria-controls="offcanvasTop"><strong><%= citation.code.name %></strong></button>
                <div class="offcanvas offcanvas-top" tabindex="-1" id="offcanvasTop<%= citation.code.id %>" aria-labelledby="offcanvasTopLabel">
                  <div class="offcanvas-header">
                    <h5 id="offcanvasTopLabel"><%= citation.code.name %></h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                  </div>
                  <div class="offcanvas-body">
                    <%= citation.code.description %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
  <div class="col">
  
  <div class="card"><div class="card-body">
    <h2><%= @address.combadd %></h2>
    <!-- Button trigger modal -->
    <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Update
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Be very careful when updating the address information.
            
          </div>
          <div class="modal-footer">
            <%= link_to "Update", edit_address_path(@address), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    
    <h4>Owner:</h4>
    <p><%= @address.ownername %></p>
    <p><%= @address.owneraddress %></p>
    <p><%= @address.ownercity %></p>
    <p><%= @address.ownerstate %></p>
    <p><%= @address.ownerzip %></p>
    <br>
    <h4>Zoning and land use</h4>
      <p>landusecode: <%= @address.landusecode %></p>
      <p>zoning: <%= @address.zoning %></p>

  </div></div>
  <br>
  <div class="card"><div class="card-body">
  <h2>Violations</h2>
    <%= link_to "Create a Violation", new_address_violation_path(@address), class: "btn btn-primary" %>
    <br>
    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th>Status</th>
          <th>Update</th>
        </tr>
      </thead>
      <tbody>
        <% @address.violations.order("created_at DESC").each do |violation| %>
          <tr>
            <td><%= violation.description %></td>
            <td><%= violation.status %></td>
            <td>
              <% if violation.current? %>
                <%= button_to "Mark as Resolved", resolve_address_violation_path(@address, violation), method: :patch, class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div></div>
  <br>

  </div>
    <br>
    <div class="col">
    <div class="card" style="background-color: #e3f2fd;"><div class="card-body">
      <%= render 'comments/form' %>
    </div></div>
    <br>
    <div class="card" style="background-color: #e3f2fd;"><div class="card-body">
      <%= render 'comments/comments' %>
    </div></div>
    </div>
    </div>
  </div>
</div>
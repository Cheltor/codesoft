<%# inspection show page %>
<% content_for :title, @address.combadd.titleize + " Inspection # " + @inspection.id.to_s %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">
      <%= link_to "Home", root_path %>
    </a></li>
    <li class="breadcrumb-item"><a href="#">
    <%= link_to @address.combadd.titleize, address_path(@address) %>
    </a></li>

    <% if @inspection.unit_id.present? %>
      <li class="breadcrumb-item"><a href="#">
      <%= link_to @inspection.unit.number, address_unit_path(@address, @inspection.unit) %>
      </a></li>
    <% end %>

    <li class="breadcrumb-item active"><a href="#">
    <%= link_to "Inspection ##{@inspection.id}", address_inspection_path(@address, @inspection) %>
    </a></li>
  </ol>
</nav>

<div class="row">
  <div class="col-sm-4">
    <%# address information %>
    <h2><%= @inspection.address.combadd.titleize %>
    <% if @unit.present? %>
      <small>Unit <%= @unit.number.upcase %></small>
    <% end %>
    </h2>
    <%# link to google maps from icon %>
    <a href="https://www.google.com/maps/search/?api=1&query=<%= @inspection.address.combadd %>+MD+<%= @inspection.address.premisezip %>" target="_blank" class="btn btn-secondary">
    <i class="bi bi-geo-alt-fill"></i> Search on Google Maps</a>
    <br>

  </div>
  <div class="col-sm-4">
    <div class="card shadow mb-3">
      <div class="card-body">         
        <h1><%= @inspection.source %> Inspection 
        </h1>
          <% if @attachments.any? %>
    <button type="button" class="btn btn-primary mt-2 mb-2" data-bs-toggle="modal" data-bs-target="#allAttachModal">
      <i class="bi bi-paperclip"></i>
      Application/photos
    </button>
    <% end %>
        <p><strong>Inspection Request Was Created:</strong> <%= @inspection.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></p>
        <% if @inspection.status.present? %>
        <p><strong>Inspection Status:</strong> <%= @inspection.status %></p>
        <% else %>
        <p><strong>Inspection Status:</strong> Pending</p>
        <% end %>
        <% if @inspection.description.present? %>
        <p><strong>Inspection Description:</strong> <%= @inspection.description %></p>
        <% end %>
        <p><strong>Inspector:</strong> <%= @inspection.inspector ? @inspection.inspector.email : "Unassigned" %></p>
        </p>
        <%= link_to "Edit inspection", edit_address_inspection_path(@address, @inspection), class: "btn btn-primary mt-3" %>
        <br>
        <%= link_to "Schedule inspection", schedule_address_inspection_path(@address, @inspection), class: "btn btn-primary mt-3" %>
        <br>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <%= generate_pre_inspection_email_link %>
    <br>
    <%= link_to "Conduct inspection", conduct_address_inspection_path(@address, @inspection), class: "btn btn-primary mt-3" %>
    <br>
    <% if @inspection.photos.attached? %>
        <button type="button" class="btn btn-primary mt-2 mb-2" data-bs-toggle="modal" data-bs-target="#allphotoModal">
      <i class="bi bi-paperclip"></i>
      Inspection photos
    </button>
    <% end %>
    <%= @inspection.notes_area_1 %>
    <br>
    <%= @inspection.notes_area_2 %>
    <br>
    <%= @inspection.notes_area_3 %>
    <br>
      <td>
    <% @inspection.codes.each do |code| %>
      <%= render partial: 'shared/code_def_show', locals: { code: code } %>
    <% end %>
  </td>
  </div>

</div> 
<div class="row">


</div>

    <!-- Attachment Modal -->
    <div class="modal fade custom-modal-lg" id="allAttachModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            All Attachments
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <% @attachments.each do |photo| %>
              <%= render partial: "shared/show_image", locals: { photo: photo } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

        <!-- Photo Modal -->
    <div class="modal fade custom-modal-lg" id="allphotoModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            All photos
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <% @attachments.each do |photo| %>
              <%= render partial: "shared/show_image", locals: { photo: photo } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
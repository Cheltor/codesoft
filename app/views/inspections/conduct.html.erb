        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="areaPhotosModalLabel<%= area.id %>">Photos for <%= area.name %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <% if area.photos.attached? %>
              <% area.photos.each do |photo| %>
                <!-- Display the photo. Adjust this according to how you handle image attachments. -->
                <%= image_tag photo, class: "img-fluid" %>
              <% end %>
            <% else %>
              <p>No photos for this area.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
                      <% end %>
                      <br>
                      <% if area.codes.present? %>
                          
                        <p><strong>Codes:</strong></p>
                          <ul>
                            <% area.codes.each do |code| %>
                              <li><%= code.name %></li>
                            <% end %>
                          </ul>
                        <% end %>
                        <br>
                        <%= link_to "Edit #{area.name}", edit_address_inspection_area_path(@address, @inspection, area), class: "btn btn-primary", data: { turbo: false } %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <h3>General Notes</h3>
      </div>
      <div class="card-body">
        <%= form_with(model: [@address, @inspection]) do |form| %>
        <div class="field">
          <label>Notes</label>
          <%= form.text_area :notes_area_1, value: @inspection.notes_area_1, class: "form-control" %>
        </div>
        <div class="field mt-3">
          <label>Photos</label>
          <%= form.file_field :extphotos, multiple: true, class: "form-control" %>
          <% if @inspection.extphotos.attached? %>
            <div>
              <strong>Uploaded Files:</strong>
              <% @inspection.extphotos.each do |attachment| %>
                <%= attachment.filename %><br>
              <% end %>
            </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <%= form_with(model: [@address, @inspection]) do |form| %>

          <% if @inspection.source == "Complaint" %>
            <div class="field mt-3">
              <label><strong>Complaint Outcome</strong></label>

                        <div>
                          <strong>Uploaded Files:</strong>
                          <% area.photos.each do |attachment| %>
                            <%= attachment.filename %><br>
                          <% end %>
                        </div>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#areaPhotosModal<%= area.id %>">
                          View Photos
                        </button>

                            <!-- Modal -->
    <div class="modal fade" id="areaPhotosModal<%= area.id %>" tabindex="-1" aria-labelledby="areaPhotosModalLabel<%= area.id %>" aria-hidden="true">

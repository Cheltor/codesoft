<%# There is a better way to do this, but I haven't done it yet. %>

<% if violation.deadline_passed? && violation.status == "current" %>
<tr class="table-danger">
  <td><%= link_to violation.address.combadd, address_path(violation.address), class: "btn btn-danger" %>
    <% if violation.unit.present? %>
      <br><%= violation.unit.number %>
    <% end %>
  </td>
  <td><%= violation.user.name %></td>
  <td><%= violation.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></td>
  <td><%= link_to violation.violation_type,violation_path(violation), class: "btn btn-danger" %></td>
  <td>
    <% violation.codes.each do |code| %>
      <%= render partial: 'shared/code_def_show', locals: { code: code } %>
    <% end %>
  </td>
  <td><%= violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></td>
    <td>
      <% if violation.deadline_passed? %>
      <%= link_to violation.citations.count, violation_path(violation), class: "btn btn-danger" %>
      <% end %>
  </td>
<% elsif violation.status == "current" %>
<tr class="table-warning">
  <td><%= link_to violation.address.combadd, address_path(violation.address), class: "btn btn-warning" %></td>
  <td><%= violation.user.name %></td>
  <td><%= violation.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></td>
  <td><%= link_to violation.violation_type,violation_path(violation), class: "btn btn-warning" %></td>
  <td>
    <% violation.codes.each do |code| %>
      <%= render partial: 'shared/code_def_show', locals: { code: code } %>
    <% end %>
  </td>
  <td><%= violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></td>
    <td>
      <% if violation.deadline_passed? %>
      <%= link_to violation.citations.count, violation_path(violation), class: "btn btn-warning" %>
      <% end %>
  </td>
<% elsif violation.status == "resolved" %>
<tr class="table-secondary">
  <td><%= link_to violation.address.combadd, address_path(violation.address), class: "btn btn-secondary" %></td>
  <td><%= violation.user.name %></td>
  <td><%= violation.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></td>
  <td><%= link_to violation.violation_type,violation_path(violation), class: "btn btn-secondary" %></td>
  <td>
    <% violation.codes.each do |code| %>
      <%= render partial: 'shared/code_def_show', locals: { code: code } %>
    <% end %>
  </td>
  <td><%= violation.deadline_date.in_time_zone("Eastern Time (US & Canada)").strftime("%B %d, %Y") %></td>
    <td>
      <% if violation.deadline_passed? %>
      <%= link_to violation.citations.count, violation_path(violation), class: "btn btn-secondary" %>
      <% end %>
  </td>
<% end %>



</tr>
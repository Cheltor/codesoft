<% if current_user.ons? || current_user.admin? %>

<div class="row">
  <div class="col-xl-6 col-xxl-5 d-flex">
    <div class="w-100">
      <div class="row">
        <div class="col-sm-6 d-none d-lg-block">
          <!-- <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col mt-0">
                  <h5 class="card-title">Comments Within the Last Week</h5>
                </div>
                <div class="col-auto">
                  <div class="stat text-primary">
                    C
                  </div>
                </div>
              </div>
              <h1 class="mt-1 mb-3"><%= @comments_last_week.count %></h1>
            </div>
          </div> -->
          <div class="card shadow mb-3" onclick="window.location='<%= my_violations_path(status: 'current') %>';" style="cursor: pointer;">
            <div class="card-body">
              <div class="row">
                <div class="col mt-0">
                  <h5 class="card-title">Violations Requiring Attention</h5>
                </div>
                <div class="col-auto">
                  <div class="stat text-primary">
                    V
                  </div>
                </div>
              </div>
              <h1 class="mt-1 mb-3">
                  <%= @violations.count %>
              </h1>
              <div class="mb-0">
                <span class=""> <i class="mdi mdi-arrow-bottom-right"></i>
                  <%= @active_violations.count %>
                </span>
              <span class="text-muted">Total Active Violations</span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6 ">
          <% if @complaints.empty? %>
          <div class="card d-none d-lg-block shadow mb-3" onclick="window.location='<%= all_complaints_path(inspector: 'My Complaints') %>';" style="cursor: pointer;">
          <% else %>          
          <div class="card shadow mb-3" onclick="window.location='<%= all_complaints_path(inspector: 'My Complaints', status: 'Pending') %>';" style="cursor: pointer;">
          <% end %>
            <div class="card-body">
              <div class="row">
                <div class="col mt-0">
                  <h5 class="card-title">Active Property Complaints</h5>
                </div> 
                <div class="col-auto">
                  <div class="stat text-primary">
                    C
                  </div>
                </div>
              </div>
              <h1 class="mt-1 mb-3">
                <%= @complaints.count %>
              </h1>
            </div>
          </div>
          <% if @unscheduled_inspections.present? %>
              <%# A different colored card for unscheduled inspections %>
              <div class="card d-none d-lg-block shadow mb-3" onclick="window.location='<%= all_inspections_path(inspector: 'My Unscheduled') %>';" style="cursor: pointer;">
            <% else %>
            <div class="card d-none d-lg-block shadow mb-3" onclick="window.location='<%= all_inspections_path(inspector: 'My Inspections') %>';" style="cursor: pointer;">
          <% end %>
              <div class="card-body">
                <div class="row">
                  <div class="col mt-0">
                    <h5 class="card-title">Inspections to be scheduled</h5>
                  </div>
                  <div class="col-auto">
                    <div class="stat text-primary">
                      I
                    </div>
                  </div>
                </div>
                <h1 class="mt-1 mb-3">
                  <%= @unscheduled_inspections.count %>
                </h1>
              </div>
            </div>
        </div>
      </div>
      <div class="row d-none d-lg-block">
        <div class="card">
          <div class="card-header">
          <h3 class='card-title'>My Timeline</h3>
          </div>
          <div class="card-body">
            <%= render partial: 'shared/dash_timeline' %>      
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-6 col-xxl-7">
    <% if @today_inspections.empty? %>
    <div class="card flex-fill w-100 d-none d-lg-block">
    <% else %>
    <div class="card flex-fill w-100">
    <% end %>
      <div class="card-header">
        <h5 class="card-title mb-0">Today's inspections</h5>
      </div>
      <div class="card-body py-3">
        <% if @today_inspections.empty? %>
          <p>No inspections scheduled for today.</p>
          <%= link_to "Inspections this week", inspection_calendar_path, class: "btn btn-outline-primary" %>
        <% else %>
          <% @today_inspections.each do |inspection| %>
          <div class="card mt-3" style="background-color: #c8e6c9;">
            <div class="card-body">
              <h5 class="card-title"><%= link_to inspection.address.property_name_with_combadd, address_inspection_path(inspection.address, inspection) %></h5>
              <p class="card-text"><strong>Scheduled:</strong> <%= inspection.scheduled_datetime.strftime("%I:%M %p") %></p>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <div class="row">
        <h3 style="text-align:center">My Priority Addresses</h3>
        <h5 style="text-align:center">Addresses with current violations, unpaid citations, pending trial citations, or pending inspections</h5>
          <% if @priority_addresses.empty? %>
            <p class="pt-5">No priority addresses.</p>
          <% else %>
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th style="text-align:center">Address</th>
                  <th style="text-align:center">Check off for today</th>
                </tr>
              </thead>
              <tbody>
              <% @priority_addresses.each do |a| %>
                <tr>
                  <td style="text-align:center">
                    <%= link_to a.property_name_with_combadd, address_path(a) %>
                  </td>
                  <td style="text-align: center">
                    <%= button_to mark_reviewed_path(a.id), method: :patch, class: "btn btn-primary", data: { turbolinks: false } do %>
                      <i class="bi bi-check-lg"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <% end %>  
        </div>    
      </div>
    </div>
      <div class="row d-block d-lg-none">
        <div class="card">
          <div class="card-header">
          <h3 class='card-title'>My Timeline</h3>
          </div>
          <div class="card-body">
            <%= render partial: 'shared/dash_timeline' %>      
          </div>
        </div>
      </div>
  </div>
</div>
<% end %>

<% if current_user.oas? %>
<div class="row">
  <div class="col-xl-6">
    <!-- informative cards -->
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Inspections/Complaints</h5>
        <p class="card-text">
          Complaints, inspections, and violations are all related to addresses.
        </p>
        <p class="card-text">
          If you are looking for a list of previously requested inspections, click the "Inspections" button below. If you are looking for a previously requested complaint, click the "Complaints" button below.
        </p>
        <%= link_to "Inspections", all_inspections_path, class: "btn btn-secondary" %>
        <%= link_to "Complaints", all_complaints_path, class: "btn btn-secondary" %>
        <%= link_to "New Complaint", new_complaint_path, class: "btn btn-danger", data: { turbo: false } %>
        <%= link_to "New Permit", new_permit_inspection_path, class: "btn btn-danger", data: { turbo: false } %>
        <%= link_to "New License", new_license_inspection_path, class: "btn btn-danger", data: { turbo: false } %>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Contacts</h5>
        <p class="card-text">
          To find a list of all contacts, or to add a new contact, click the "Contacts" button below.
        </p>
        <%= link_to "Contacts", contacts_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Citations</h5>
        <p class="card-text">
          To find the list of all current citations, click the "Citations" button below. In order to update the citation from unpaid to paid, click on the "unpaid" button.
        </p>
        <%= link_to "Citations", all_citations_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Businesses</h5>
        <p class="card-text">
          To find a list of all businesses, click the businesses button below. To add a new business, click the "Add New Business" button on an address page.
        </p>
        <%= link_to "Businesses", businesses_path, class: "btn btn-secondary" %>
        <%= link_to "Add New Business", new_business_path, class: "btn btn-secondary", data: { turbo: false } %>
      </div>
    </div>
  </div>
</div>
<% end %>
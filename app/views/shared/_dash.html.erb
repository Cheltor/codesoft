<% if current_user.ons? || current_user.admin? %>
<div class="row">
  <div class="col-xl-6 col-xxl-5 d-flex">
    <div class="w-100">
      <div class="row">
        <div class="col-sm-6 d-none d-lg-block">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col mt-0">
                  <h5 class="card-title">Comments Within the Last Week</h5>
                </div>

                <div class="col-auto">
                  <div class="stat text-primary">
                    C
                  </div>
                </div>
              </div>
              <h1 class="mt-1 mb-3"><%= @comments_last_week.count %></h1>
            </div>
          </div>
          <div class="card shadow mb-3" onclick="window.location='<%= my_violations_path(status: 'current') %>';" style="cursor: pointer;">
            <div class="card-body">
              <div class="row">
                <div class="col mt-0">
                  <h5 class="card-title">Violations Requiring Attention</h5>
                </div>

                <div class="col-auto">
                  <div class="stat text-primary">
                    V
                  </div>
                </div>
              </div>
              <h1 class="mt-1 mb-3">
                  <%= @violations.count %>
              </h1>
              <div class="mb-0">
                <span class=""> <i class="mdi mdi-arrow-bottom-right"></i>
                  <%= @active_violations.count %>
                </span>
              <span class="text-muted">Total Active Violations</span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card shadow mb-3" onclick="window.location='<%= my_complaints_path(status: 'current') %>';" style="cursor: pointer;">
            <div class="card-body">
              <div class="row">
                <div class="col mt-0">
                  <h5 class="card-title">Complaints</h5>
                </div>

                <div class="col-auto">
                  <div class="stat text-primary">
                    C
                  </div>
                </div>
              </div>
              <h1 class="mt-1 mb-3">
                <%= @complaints.count %>
              </h1>
            </div>
          </div>
                    <div class="card d-none d-lg-block shadow mb-3" onclick="window.location='<%= my_inspections_path(scheduled_datetime: 'unscheduled') %>';" style="cursor: pointer;">

            <div class="card-body">
              <div class="row">
                <div class="col mt-0">
                  <h5 class="card-title">Inspections to be scheduled</h5>
                </div>

                <div class="col-auto">
                  <div class="stat text-primary">
                    I
                  </div>
                </div>
              </div>
              <h1 class="mt-1 mb-3">
                <%= @unscheduled_inspections.count %>
              </h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xl-6 col-xxl-7">
    <div class="card flex-fill w-100">
      <div class="card-header">

        <h5 class="card-title mb-0">Today's inspections</h5>
      </div>
      <div class="card-body py-3">
        <% if @today_inspections.empty? %>
          <p>No inspections scheduled for today.</p>
        <% else %>
          <% @today_inspections.each do |inspection| %>
          <div class="card mt-3" style="background-color: #c8e6c9;">
            <div class="card-body">
              <h5 class="card-title"><%= link_to inspection.address.combadd, address_inspection_path(inspection.address, inspection) %></h5>
              <p class="card-text"><strong>Scheduled:</strong> <%= inspection.scheduled_datetime.strftime("%I:%M %p") %></p>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xl-12">
    <div class="row">      <!-- list of @priority_addresses -->
      <div class="card">
        <div class="card-body">
          <div class="row">
          <h3>My Priority Addresses</h3>
          <h5>Addresses with current violations, unpaid citations, pending trial citations, or pending inspections</h5>
            <% @priority_addresses.each do |address| %>
              <div class="col-lg-3">
                <ul class="list-group mb-3">
                    <li class="list-group-item"><strong><%= link_to address.combadd, address_path(address) %></strong></li>
                    
                    <% if address.violations.current.where(user_id: current_user.id).exists? %>
                      <% if address.violations.current.any? { |violation| violation.deadline_date <= Date.tomorrow } %>
                        <li class="list-group-item"><%= pluralize(address.violations.current.where(user_id: current_user.id).count, 'Active Violations') %></li>
                      <% else %>
                        <li class="list-group-item"><%= pluralize(address.violations.current.where(user_id: current_user.id).count, 'Active Violations') %></li>
                      <% end %>
                    <% end %>

                    
                    <% if address.violations.any? { |violation| violation.citations.where(status: ["unpaid"], user_id: current_user.id).exists? } %>
                      <li class="list-group-item"><%= pluralize(address.violations.map { |violation| violation.citations.where(status: ["unpaid"], user_id: current_user.id).count }.sum, 'Unpaid Citations') %></li>
                    <% end %>

                    <% if address.violations.any? { |violation| violation.citations.where(status: ["pending trial"], user_id: current_user.id).exists? } %>
                      <li class="list-group-item"><%= pluralize(address.violations.map { |violation| violation.citations.where(status: ["pending trial"], user_id: current_user.id).count }.sum, 'Pending Trial Citations') %></li>
                    <% end %>

                        <% if address.inspections.where(status: nil, scheduled_datetime: nil, inspector_id: current_user.id).any? %>
                          <li class="list-group-item"><%= pluralize(address.inspections.where(status: nil, scheduled_datetime: nil, inspector_id: current_user.id).count, 'Pending Inspections') %></li>
                        <% end %>
                        <% if address.inspections.where(source: "Complaint", status: nil, inspector_id: current_user.id).any? %>
                        <li class="list-group-item"><%= pluralize(address.inspections.where(source: "Complaint", status: nil, inspector_id: current_user.id).count, 'Complaints') %></li>
                        <% end %>
                        <% if address.inspections.where.not(scheduled_datetime: nil).where(status: nil, inspector_id: current_user.id).any? %>
                          <% if address.inspections.where(scheduled_datetime: Date.today.beginning_of_day..Date.today.end_of_day) %>
                          <li class="list-group-item"><%= pluralize(address.inspections.where.not(scheduled_datetime: nil).where(status: nil, inspector_id: current_user.id).count, 'Scheduled Inspections') %></li>
                          <% else %>
                          <li class="list-group-item"><%= pluralize(address.inspections.where.not(scheduled_datetime: nil).where(status: nil, inspector_id: current_user.id).count, 'Scheduled Inspections') %></li>
                          <% end %>
                        <% end %>
                    </ul>          
              </div>
            <% end %>      
          </div>    
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<% if current_user.oas? %>
<div class="row">
  <div class="col-xl-6">
    <!-- informative cards -->
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Inspections/Complaints</h5>
        <p class="card-text">
          Complaints, inspections, and violations are all related to addresses. To create a new inspection request, find the address in the search bar above and click the "Create New Inspection Request" button.
        </p>
        <p class="card-text">
          If you are looking for a list of previously requested inspections, click the "Inspections" button below. If you are looking for a previously requested complaint, click the "Complaints" button below.
        </p>
        <%= link_to "Inspections", all_inspections_path, class: "btn btn-secondary" %>
        <%= link_to "Complaints", all_complaints_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Contacts</h5>
        <p class="card-text">
          To create a new inspection request, find the address in the search bar above and click the "Create New Inspection Request" button.
        </p>
        <%= link_to "Contacts", contacts_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Citations</h5>
        <p class="card-text">
          To find the list of all current citations, click the "Citations" button below. In order to update the citation from unpaid to paid, click on the "unpaid" button.
        </p>
        <%= link_to "Citations", all_citations_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
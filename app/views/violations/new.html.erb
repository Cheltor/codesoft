<h1>Create a Violation</h1>

<%= form_with(model: [@address, @violation], local: true) do |form| %>

  <div class="field">
    <%= form.label :deadline %>
    <%= form.select :deadline, Violation::DEADLINE_OPTIONS %>
  </div>
    <div class="form-group">
    <%= form.label :codes %>
    <%= form.collection_select :code_ids, Code.all, :id, :name, {}, { multiple: true, class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.submit "Create Violation", class: "btn btn-primary" %>
  </div>
<% end %>

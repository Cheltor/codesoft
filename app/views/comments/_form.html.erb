<h3>Comments</h3>
<% @address.comments.each do |comment| %>
  <p><strong><%= comment.user.email %></strong> says: <%= comment.content %></p>
<% end %>

<% if user_signed_in? %>
  <%= form_for([@address, @address.comments.build]) do |f| %>
    <%= f.text_area :content %>
    <%= f.submit %>
  <% end %>
<% end %>

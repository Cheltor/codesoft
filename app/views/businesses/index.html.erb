  <div class="card" style="background-color: #e3f2fd;">
    <div class="card-body">
      <%= search_form_for @business_q, url: businesses_path, method: :get do |f| %>
      <%= f.search_field :name_cont, class:"form-control form-control-lg", placeholder: "Search businesses" %>
      <br><div style="text-align:center"><%= f.submit "Search", class:"btn btn-primary" %></div>
      <% end %>
    </div>
  </div>
  <br>
<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body text-center">
        <h2>Businesses</h2>
        <%= link_to "New Business", new_business_path, class: "btn btn-outline-secondary", data: { turbo: false } %>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <% if @business_q.result.count == 0 %>
          <p>No businesses found.</p>
        <% else %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Website</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @businesses.each do |business| %>
                <tr>
                  <td><%= link_to business.name, address_business_path(business.address, business), class: "btn" %></td>
                  <td><%= link_to business.address.property_name_with_combadd, business.address, class: "btn" %></td>
                  <td>
                    <% if business.phone.present? %>
                      <a href="tel:<%= business.phone %>"><%= format_phone_number(business.phone) %></a>
                    <% end %>
                  </td>
                  <td>
                    <% if business.email.present? %>
                      <%= link_to business.email, "mailto:#{business.email}" %>
                    <% end %>
                  </td>
                  <td>
                    <% if business.website.present? && business.website != "http://" %>
                        <a href="<%= business.website %>" target="_blank"><%= business.website %></a>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "Edit", edit_address_business_path(business.address, business), class: "btn btn-outline-secondary", data: { turbo: false } %>
                </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>





<div class="container"> 

  <p style="color: green"><%= notice %></p>

  <h1>Codes</h1>

      <div class="card" style="background-color: #e3f2fd;">
        <div class="card-body">
          <%= search_form_for @q, url: codes_path, method: :get do |f| %>
          <%= f.search_field :chapter_or_section_or_name_or_description_cont, class:"form-control form-control-lg", placeholder: "Search codes" %>
          <br><div style="text-align:center"><%= f.submit "Search", class:"btn btn-primary" %></div>
          <% end %>
        </div>
      </div>
  <br>
  <%= link_to "New code", new_code_path, class:"btn btn-outline-primary" %>
<div class="table-responsive">
  <table class="table table-sm">
    <thead>
      <tr>
        <th scope="col">Chapter</th>
        <th scope="col">Section</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <% if user_signed_in? %>
        <th scope="col">Change the code</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
    <% @codes.each do |code| %>
      <tr>
        <th><%= code.chapter %></th>
        <td><%= code.section %></td>
        <td><%= code.name %></td>
        <td><%= code.description %></td>
        <% if user_signed_in? %>
        <td><%= link_to "Edit", edit_code_path(code), class:"btn btn-warning" %></td>
        <% end %>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>

</div>
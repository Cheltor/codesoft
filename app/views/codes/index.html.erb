<div class="container"> 

  <p style="color: green"><%= notice %></p>

  <h1>Codes</h1>
  
  <%= link_to "New code", new_code_path, class:"btn btn-outline-primary" %>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Chapter</th>
        <th scope="col">Section</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Change the code</th>
      </tr>
    </thead>
    <tbody>
    <% @codes.each do |code| %>
      <tr>
        <th><%= code.chapter %></th>
        <td><%= code.section %></td>
        <td><%= code.name %></td>
        <td><%= code.description %></td>
        <td><%= link_to "Edit", edit_code_path(code), class:"btn btn-warning" %>
      </tr>
    <% end %>

    </tbody>
  </table>


</div>
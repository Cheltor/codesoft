<!-- edit form for user -->

<div class="container">
  <div class="row">
    <div class="col">
      <h1>Edit User Role</h1>
        <%= form_for(@user, url: user_path(@user), method: :put) do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "control-label" %>
          <%= f.text_field :name, class: "form-control", disabled: true %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "control-label" %>
          <%= f.text_field :email, class: "form-control", disabled: true %>
        </div>

        <div class="form-group">
          <%= f.label :role, class: "control-label" %>
          <%= f.select :role, User.roles.keys, {}, class: "form-control" %>
        </div>

        <%= f.submit "Update Role", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>
